{
  "name": "@metamask/storybook-react",
  "version": "0.0.0",
  "description": "storybook react",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/metamask-design-system/tree/main/packages/storybook-react#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/metamask-design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/metamask-design-system.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "ts-bridge --project tsconfig.build.json --verbose --clean --no-references",
    "build-storybook": "storybook build",
    "build:docs": "typedoc",
    "changelog:update": "../../scripts/update-changelog.sh @metamask/storybook-react",
    "changelog:validate": "../../scripts/validate-changelog.sh @metamask/storybook-react",
    "publish:preview": "yarn npm publish --tag preview",
    "since-latest-release": "../../scripts/since-latest-release.sh",
    "storybook": "storybook dev -p 6006",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --reporters=jest-silent-reporter",
    "test:clean": "NODE_OPTIONS=--experimental-vm-modules jest --clearCache",
    "test:verbose": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "dependencies": {
    "@metamask/design-tokens": "^4.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@lavamoat/allow-scripts": "^3.2.1",
    "@metamask/auto-changelog": "^3.4.4",
    "@storybook/addon-a11y": "^8.3.5",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@types/jest": "^27.4.1",
    "autoprefixer": "^10.4.20",
    "deepmerge": "^4.2.2",
    "jest": "^27.5.1",
    "postcss": "^8.4.47",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.13",
    "ts-jest": "^27.1.4",
    "typedoc": "^0.24.8",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typescript": "~5.2.2",
    "vite": "^5.4.8"
  },
  "engines": {
    "node": "^18.18 || >=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lavamoat": {
    "allowScripts": {
      "storybook>@storybook/core>esbuild": false
    }
  }
}
